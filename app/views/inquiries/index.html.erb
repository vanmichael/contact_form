<div class="row">
	<h1>All Inquiries</h1>

	<h2>Count: <%= Inquiry.all.count %></h2>
</div>

<div class="row">
<% @inquiries.each do |i| %>
<ul class="pricing-table">
  <li class="title">Subject: <%= i.subject %></li>
  <li class="price">Inquierer: <%= "#{i.first_name} #{i.last_name}" %></li>
  <li class="description">Description: <%= i.description %> </li>
  <li class="cta-button"><%= link_to "Delete", inquiry_path(i), method: :delete, class: "button" %></li>
</ul>
<% end %>

</div>